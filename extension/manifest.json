{
  "manifest_version": 3,
  "name": "MailScribe",
  "version": "1.0",
  "description": "AI-powered email reply generator",
  "permissions": ["activeTab"],
  "host_permissions": ["http://localhost:8081/*", "https://mail.google.com/*"],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_title": "Email Writer Assistant"
  }
}
